@model IEnumerable<RecApp_2.Models.TratamientoPaciente>


<table class="table table-responsive table-bordered">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Tratamiento)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FechaTratamiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Costo)
        </th>
        
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">Ningún registro coincide con la búsqueda. Intente nuevamente.</td>
        </tr>
    }


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tratamiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaTratamiento)
            </td>
            <td>
                @string.Format("{0:C}", item.Costo)
            </td>
            
        </tr>
        
    } 
    <tr>
        <td colspan="3" style="text-align:right;">
            <strong>Montos Adicionales:</strong> @string.Format("{0:C}", @Model.ToList()[Model.ToList().Count - 1].MontoAdicional)
        </td>
    </tr>  
    <tr>
        <td colspan="3" style="text-align:right;">
            <strong>Monto total:</strong> @string.Format("{0:C}", @Model.ToList()[Model.ToList().Count() - 1].Total)
        </td>
    </tr>
</table>


