@model RecApp_2.Models.Payment

<script>
        function calcularTotalPagar() {
            var montoAdicional = $("montoAdicional").val;
            var total = $("totalPagar").val;
            if (montoAdicional >= 0) {
                var totalizado = montoAdiconal + total;


                $('#TotalPagar').val(totalizado);

            }
        }
</script>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <table class="table table-responsive table-bordered">
            <tr>

                <th>
                    Tratamiento
                </th>

                <th>
                    Fecha Tratamiento
                </th>
                <th>
                    Costo
                </th>

            </tr>

            @foreach (var item1 in Model.ListTratamientoXPaciente)
            {
                <tr>
                    <td>
                        @item1.Tratamiento
                    </td>
                    <td>
                        @item1.FechaTratamiento.ToShortDateString()
                    </td>
                    <td style="text-align:right;">
                        @string.Format("{0:C}", item1.Costo)
                    </td>

                </tr>

            }
        </table>
        <div class="form-group">
            @Html.Label("Monto adicional", htmlAttributes: new { @class = "control-label col-md-3 col-md-offset-6" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.MontoAdicional, new
           {
               htmlAttributes = new
               {
                   @class = "form-control",
                   @style = "text-align:right;",
                   @id = "montoAdicional",
                   @onchange = "javascript:calcularTotalPagar();"
               }
           })
                @Html.ValidationMessageFor(model => model.MontoAdicional, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TotalPagar, htmlAttributes: new { @class = "control-label col-md-3 col-md-offset-6" })
            <div class="col-md-3">
                <div class="form-control text-right">
                    <span id="totalPagar"> @string.Format("{0:C}", Model.TotalPagar)</span>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
