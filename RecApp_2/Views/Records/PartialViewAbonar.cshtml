@model RecApp_2.Models.PaymentDetails


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormularioAbono" }))
{
    @Html.AntiForgeryToken()   
        <div class="form-horizontal">
            <strong><span class="glyphicon glyphicon-alert"></span> Importante:</strong> Ingrese el monto del abono y presione "Abonar" para aplicar un abono.
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.IdPayment, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IdPayment, new { htmlAttributes = new { @class = "form-control", @readonly = "true", @id = "idFacturaAbono" } })
                    @Html.ValidationMessageFor(model => model.IdPayment, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.FechaAbono, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FechaAbono, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.FechaAbono, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Saldo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Saldo, new { htmlAttributes = new { @class = "form-control", @readonly = "true", @id = "idSaldoFacturaAbono" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Abono, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Abono, new { htmlAttributes = new { @class = "form-control", type = "number", step = "100", max = "999999999999999.00", placeholder = "Monto", @id = "montoAbono", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Abono, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>       
        }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
