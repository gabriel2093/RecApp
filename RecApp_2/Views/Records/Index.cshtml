@model IEnumerable<RecApp_2.Models.Record>

@{
    ViewBag.Title = "Especialidades Odontológicas | Expediente Clínico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container col-md-12 center-block">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h2>Expedientes Clínicos</h2>
        </div>
        <div class="panel-body table-responsive">
            <p>
                @Html.ActionLink("Crear nuevo expediente", "Create", null, new { @class = "btn btn-success glyphicon glyphicon-plus" })
            </p>
             @using (Html.BeginForm("Index", "Records", FormMethod.Get))
            {
                <div class="form-group">
                    <div class="col-md-6">
                        @*Buscar registro*@
                        <span class="glyphicon glyphicon-search"></span> @Html.TextBox("search")
                        <input type="submit" value="Buscar" class="btn-custom-danger"/>                   
                    </div>
                </div>           
             }
          
            <table class="table table-responsive table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apellido1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apellido2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cedula)
                    </th>                  
                    <th>
                        @Html.DisplayNameFor(model => model.Domicilio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefono1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefono2)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactoEmergencia)
                    </th>
                    <th></th>
                </tr>
                @*Si no se encuenta coincidencia en la búsqueda ,muestre el mensaje*@
                @if (Model.Count() == 0) 
                {
                    <tr>
                        <td colspan="10">Ningún registro coincide con la búsqueda. Intente nuevamente.</td>
                    </tr>
                }
                       
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellido1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellido2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cedula)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Domicilio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono2)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactoEmergencia)
                        </td>

                        <td>
                            @Html.ActionLink("Abrir Expediente", "Edit", new { id = item.id }, new { @class = "btn btn-warning glyphicon glyphicon-book" })                                                      
                        </td>
                    </tr>
                }
                
            </table><br/>
            <a href="@Url.Action("Index","Home")" class="btn btn-primary"> <h5>Volver al inicio</h5></a>
        </div>
      
    </div>
</div>
