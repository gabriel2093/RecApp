@model RecApp_2.Models.ApplicationUser

@{
    ViewBag.Title = "Editar usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container col-md-12 center-block">

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2>Editar usuario @*Html.DisplayForModel(Model.Email)*@</h2>
            </div>
            <div class="panel-body">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="form-horizontal">
                    <div class="col-md-12">
                        <div class="form-group">
                           
                            <div class='col-md-8'>
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label " })
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                          
                        </div>

                        <div class="form-group">
                            
                            <div class='col-md-8'>
                                @Html.Label("Nombre de usuario")
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                           
                        </div>

                        <div class="form-group">                           
                            <div class='col-md-8'>
                                @Html.Label("Rol de usuario")
                                @Html.DropDownList("RoleId", (SelectList)ViewBag.Name, " ", new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(m => m.RoleId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class='col-md-8'>
                                @Html.ActionLink("Volver al listado ", "MantUsuarios",null, new { @class = "btn btn-primary pull-left" })                                
                                <input type="submit" value="Guardar" class="btn btn-primary pull-right" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



