@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Agregar nuevo rol";
}

<div class="container col-md-12 center-block">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h2>Nuevo rol</h2>
        </div>
        <div class="panel-body">

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="input-group" style="max-width:50%;">

                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre del rol" } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    <span class="input-group-btn">
                        <input type="submit" value="Crear rol" class="btn btn-primary" />
                    </span>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}